<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="FindStones.MainTabbedPage">

    <!-- Tab for Hide Stones -->
    <ContentPage Title="Hide Stones">
        <StackLayout>
            <Label Text="This is the Hide Stones page" 
                   VerticalOptions="CenterAndExpand" 
                   HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage>

    <!-- Tab for Found Stones -->
    <ContentPage Title="Found Stones">
        <StackLayout>
            <Label Text="This is the Found Stones page" 
                   VerticalOptions="CenterAndExpand" 
                   HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage>

    <!-- Tab for About -->
    <ContentPage Title="About">
        <StackLayout>
            <Label Text="This is the About page" 
                   VerticalOptions="CenterAndExpand" 
                   HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage>

</TabbedPage>
