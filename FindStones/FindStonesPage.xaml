<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FindStones.FindStonesPage"
             x:Name="findStonesPage"
             Title="Find Stones">
    
    <VerticalStackLayout>
        <Label Text="Welcome to Find Stones!" 
               VerticalOptions="Center" 
               HorizontalOptions="Center" />

        <!-- Button to Show All Stones on Google Maps -->
        <Button Text="Show All Stones on Map" 
                HorizontalOptions="Center" 
                VerticalOptions="Center"
                Command="{Binding ShowAllStonesOnMapCommand}" />
    </VerticalStackLayout>
</ContentPage>
